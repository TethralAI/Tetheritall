# Tetheritall Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL/CockroachDB Connection
DATABASE_URL=postgresql://username:password@host:port/database_name

# Alternative formats:
# DATABASE_URL=postgresql://user:pass@localhost:5432/tetheritall
# DATABASE_URL=postgresql://user:pass@cluster.cockroachlabs.cloud:26257/tetheritall?sslmode=verify-full
# DATABASE_URL=postgresql://user:pass@your-aurora-cluster.cluster-xyz.region.rds.amazonaws.com:5432/tetheritall

# Redis Connection
REDIS_URL=redis://localhost:6379/0
# REDIS_URL=redis://user:pass@host:port/database
# REDIS_URL=rediss://user:pass@host:port/database  # SSL

# =============================================================================
# API KEYS & SECRETS
# =============================================================================

# Application Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here

# API Keys
API_KEY=your-api-key-here

# Environment
ENVIRONMENT=development  # development, staging, production

# Log Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Credentials (use IAM roles in production)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1

# AWS Services
AWS_S3_BUCKET=your-s3-bucket-name
AWS_SECRETS_MANAGER_REGION=us-east-1

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Azure
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APN_KEY_ID=your-apn-key-id
APN_TEAM_ID=your-apn-team-id
APN_AUTH_KEY=your-apn-auth-key

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry
SENTRY_DSN=https://your-sentry-dsn

# DataDog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# New Relic
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db

# Mock Services
MOCK_EXTERNAL_APIS=true
MOCK_EMAIL_SENDING=true

# Debug Settings
DEBUG=true
FLASK_DEBUG=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Session Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_ML_SUGGESTIONS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# IoT Device Integration
IOT_HUB_CONNECTION_STRING=your-iot-hub-connection-string
IOT_DEVICE_PROVISIONING_SCOPE=your-dps-scope

# Third-party Services
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token

STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Docker
DOCKER_REGISTRY=your-registry.azurecr.io
DOCKER_IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=tetheritall
K8S_CLUSTER_NAME=your-cluster-name

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =============================================================================
# COMPLIANCE & PRIVACY
# =============================================================================

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=730  # 2 years
PRIVACY_POLICY_URL=https://yourdomain.com/privacy

# Data Processing
DATA_PROCESSING_CONSENT_REQUIRED=true
ANONYMIZE_USER_DATA=true
